  </head>
<body>
<h1>Drilling Rules</h1>
<hr>
<a href="/">Config Home</a> 
<form method="post" action="/rule/search" id="form" enctype="application/x-www-form-urlencoded">
 Domain: <input name="domain" id="domain" value="" size="30" type="text">
<input type="submit" value="Filter">&nbsp;&nbsp;<a href="/rule/driller::/edit">Add</a><br>
</form>
<hr><br>


<% if(rules.length) {%>
<table>
  <tbody>
    <tr>
      <th>ID</th>
      <th>domain</th>
      <th>alias</th>
      <th>active</th>
      <th>extract content</th>
      <th>type</th>
      <th>priority</th>
      <th>weight</th>
      <th>action</th>
    </tr>
    <% rules.forEach(function(rule){ %>
       <tr>
       <td><%= rule.id %></td>
       <td><%= rule.domain %></td>
       <td><%= rule.alias %></td>
       <td><%= rule.active %></td>
       <td><%= rule.save_page %></td>
       <td><%= rule.type %></td>
       <td><%= rule.priority %></td>
       <td><%= rule.weight %></td>
       <td><a href="/rule/<%= rule.id %>/edit">Edit</a>&nbsp;
          <a href="/rule/<%= rule.id %>">Delete</a></td>
       </tr>
    <% }) %>
  </tbody>
</table>
<% } %>
<br>
</body></html>